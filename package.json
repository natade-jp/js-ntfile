{
	"name": "ntfile",
	"version": "1.0.0",
	"description": "Library to read/write files.",
	"keywords": [
		"file"
	],
	"author": "natade-jp <natade3@gmail.com> (https://github.com/natade-jp)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/natade-jp/js-ntfile.git"
	},
	"license": "MIT",
	"source": "./src/index.js",
	"main": "./build/esm/index.js",
	"exports": {
		".": {
			"import": "./build/esm/index.js",
			"require": "./build/cjs/index.js"
		}
	},
	"type": "module",
	"scripts": {
		"build": "node ./scripts/package.build.js",
		"test": "jest",
		"test_target": "node ./scripts/package.test.js",
		"doc": "node ./scripts/package.doc.js"
	},
	"directories": {
		"src": "./src",
		"build": "./build"
	},
	"bugs": {
		"url": "https://github.com/natade-jp/js-ntfile/issues"
	},
	"jest": {
		"verbose": true,
		"rootDir": "./src",
		"moduleFileExtensions": [
			"js",
			"mjs"
		],
		"testMatch": [
			"**/__tests__/**/*.?(m)js?(x)",
			"**/?(*.)(spec|test).?(m)js?(x)"
		],
		"transform": {
			"^.+\\.(js|mjs)$": "babel-jest"
		}
	},
	"babel": {
		"env": {
			"test": {
				"plugins": [
					"transform-es2015-modules-commonjs"
				]
			}
		}
	},
	"homepage": "https://github.com/natade-jp/js-ntfile",
	"devDependencies": {
		"@lopatnov/rollup-plugin-uglify": "^2.1.5",
		"@rollup/plugin-buble": "^1.0.2",
		"@types/jest": "^29.5.4",
		"babel-jest": "^29.6.4",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"esdoc": "^1.1.0",
		"esdoc-standard-plugin": "^1.0.0",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-jest": "^27.2.3",
		"jest": "^29.6.4",
		"jsdoc": "^4.0.2",
		"prettier": "^3.0.2",
		"rollup": "^3.28.1"
	}
}
